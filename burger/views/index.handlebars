<h1>Burgers!</h1>

<h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        <!-- {{this.name}} -->

        <form action="burger/update/{{this.id}}?_method=PUT" method="POST">
          {{this.burger_name}}
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour this burger?</button>
        </form>

        <!-- {{> burgers/delete-cat}} -->
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        

        <form action="burger/delete/{{this.id}}?_method=DELETE" method="POST">
          {{this.burger_name}}
          <input type="hidden" name="id" value="{{this.id}}">
          <button type="submit">Burger go bye bye</button>
        </form>

        <!-- {{> burgers/delete-cat}} -->
      </li>
    {{/if}}
  {{/each}}
</ul>
