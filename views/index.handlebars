<h1>Burgers!</h1>

<h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        <!-- {{this.name}} -->

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          {{this.burger_name}}
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour this burger?</button>
        </form>
        
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>        
        <p> {{this.burger_name}} </p>
       <!--  <form action="burger/delete/{{this.id}}?_method=DELETE" method="POST">
          {{this.burger_name}}
